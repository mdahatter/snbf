<?xml version="1.0"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>
	<action-mappings>

		<action path="/ideas/view" type="com.aoml.portlets.ideas.ViewAction">
			<forward name="portlet.ideas.error" path="portlet.ideas.error" />
			<forward name="portlet.ideas.view" path="portlet.ideas.view" />
		</action>

		<action path="/ideas/view_message" type="com.aoml.portlets.ideas.ViewMessageAction">
			<forward name="portlet.ideas.error" path="portlet.ideas.error" />
			<forward name="portlet.ideas.view_message" path="portlet.ideas.view_message" />
		</action>

		<action path="/ideas/edit_message" type="com.aoml.portlets.ideas.EditMessageAction">
			<forward name="portlet.ideas.edit_message" path="portlet.ideas.edit_message" />
			<forward name="portlet.ideas.error" path="portlet.ideas.error" />
		</action>
		<action path="/ideas/edit" type="com.aoml.portlets.ideas.EditPreferencesAction">
			<forward name="portlet.ideas.edit" path="portlet.ideas.edit" />
		</action>
	</action-mappings>

	<controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"></controller>
	<plug-in className="org.apache.struts.tiles.TilesPlugin">
		<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml"></set-property>
		<set-property property="moduleAware" value="true"></set-property>
		<set-property property="definitions-parser-validate"
			value="true"></set-property>
	</plug-in>
</struts-config>